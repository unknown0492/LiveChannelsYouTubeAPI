<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity1">

    <RelativeLayout
        android:id="@+id/ll_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_weight="5.5"
        android:layout_alignParentLeft="true">


        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

        </ImageView>

        <RelativeLayout
            android:id="@+id/ll_desc_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/left_gradient">

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="Bahubali 2 - The Conclusion"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp" />

            <TextView
                android:id="@+id/tv_published_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_video_title"
                android:layout_alignLeft="@+id/tv_video_title"
                android:textColor="@color/white"
                android:text="Published on 28 August 2017"
                android:textSize="15sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tv_video_description"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_published_date"
                android:layout_alignLeft="@+id/tv_published_date"
                android:textColor="@color/white"
                android:text="Bahubali is the story of the yoddha who never lost in the war. He was the great son of Katappa with Devsena. The Devsena was a very pretty girl and bahubali could do anything to get her ! He had a deadly brother who had his evil eyes on the Throne of Maheshmati."
                android:textSize="19sp"
                android:lineSpacingExtra="2sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:focusableInTouchMode="true"
        android:background="@color/black"
        android:focusable="true">



    </RelativeLayout>



</LinearLayout>